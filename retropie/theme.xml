<theme>
    <formatVersion>6</formatVersion>
    <include>./../theme.xml</include>

	<view name="system">
	
		<text name="logoText">
			<text>System Settings</text>	
		</text>
		
		<text name="system-name" extra="true">
			<text>System Settings</text>		
		</text>	

	</view>
	
	
	<view name="grid">

		<imagegrid name="gamegrid">
			<pos>0.2770833333333333 0.3259259259259259</pos>
			<size>0.4458333333333333 0.4666666666666667</size>
			<margin>0.0125 0.0222222222222222</margin>
			<scrollDirection>vertical</scrollDirection>
		</imagegrid>

		<gridtile name="default">
			<size>0.0791666666666667 0.1407407407407407</size>
			<padding>16 16</padding>
			<backgroundImage>./config-tile.png</backgroundImage>
			<backgroundCornerSize>0 0</backgroundCornerSize>
			<backgroundColor>ffffff</backgroundColor>
			<imageColor>ffffff</imageColor>
		</gridtile>

		<gridtile name="selected">
			<size>0.0791666666666667 0.1407407407407407</size>
			<backgroundImage>./config-tile-selected.png</backgroundImage>
			<backgroundColor>ffffff</backgroundColor>
		</gridtile>	

		<image name="config-bg" extra="true">
			<pos>0.5 0.2777777777777778</pos>
			<size>0.5 0.562962962962963</size>
			<path>./config.png</path>
			<color>ffffff</color>	
			<origin>0.5 0</origin>
		</image>
		
		<text name="logoText">
			<text>System Settings</text>
		</text>
		
	</view>
	
</theme>